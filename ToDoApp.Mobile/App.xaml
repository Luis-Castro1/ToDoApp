<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ToDoApp.Mobile"
             xmlns:converters="clr-namespace:ToDoApp.Mobile.Converters"
             x:Class="ToDoApp.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:NullOrStringToBoolConverter x:Key="NullOrStringToBoolConverter" />
            <converters:InverterBooleanCoverter x:Key="InverterBooleanCoverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
